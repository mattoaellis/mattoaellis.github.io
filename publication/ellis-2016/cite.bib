 issn = {2045-2322},
 journal = {Sci. Rep.},
 month = {jul},
 number = {30522},
 pages = {30522},
 publisher = {Nature Publishing Group},
 title = {All-optical switching in granular ferromagnets caused by magnetic circular dichroism},
